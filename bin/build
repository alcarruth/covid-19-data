#!/bin/sh

root_dir="/opt/git/covid_19_data/"

cd ${root_dir}

rm -rf build/ browser/
mkdir -p build/js build/css/ browser/js browser/css

coffee -cM -o build/js/ src/covid_19_data.coffee
coffee -cM -o build/js/ src/csse_covid_19_data.coffee
coffee -cM -o build/js/ src/population_data.coffee

coffee bin/build.coffee > build/index.html
#cp src/index.html build/
cp src/css/*.css build/css/
cp src/js/* build/js/

cp node_modules/csvtojson/browser/csvtojson.min.js build/js/
cp node_modules/csvtojson/browser/browser.js build/js/
cp node_modules/sortable_table/browser/*.js build/js/

cp -r build/js/* browser/js/
cp -r build/css/* browser/css/
cp build/index.html browser/
